{
  "name": "YogWeb Development Server",
  "version": "1.0.0",
  "description": "现代化酸奶研究网站开发服务器",
  "server": {
    "port": 8189,
    "host": "localhost",
    "hot_reload": true,
    "auto_open": true
  },
  "watch": {
    "extensions": [
      ".css",
      ".html",
      ".js",
      ".json"
    ],
    "directories": [
      "css",
      "style",
      "common",
      "."
    ],
    "ignore": [
      "__pycache__",
      ".git",
      "node_modules",
      "dist"
    ]
  },
  "features": {
    "debug_tools": true,
    "performance_monitor": true,
    "responsive_preview": true,
    "css_validation": true
  },
  "build": {
    "minify": true,
    "gzip": true,
    "source_map": false
  }
}